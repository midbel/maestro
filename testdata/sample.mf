# a comment

star  = *
minus = -

domain = midbel.org

about = <<HELP
demo help text

heredoc accepts multiple lines

blank lines are kept as is!
HELP

.AUTHOR       = midbel
.EMAIL        = noreply@$domain
.VERSION      = 0.1.0
.HELP         = $about
.ALL          = action1 action2
.DEFAULT      = action2
.SSH_USER     = test
.SSH_PASSWORD = "tmp123!"

single   = foobar
multiple = foo bar
replace  = pre-${single}-post prefix-${multiple}-suffix

multiple += $single

dquote = "print ${single} in string"
squote = 'print ${single} in string'

obj1 = (
	prop1 = value1, # a comment after value should be accepted
	prop2 = value2,
	prop3 = value3 value4 $single,
)
obj2 = (prop4 = value4, prop5 = value5)

export (
	FOO    = foo # a comment after export should be accepted
	BAR    = bar
	FOOBAR = $single
)

tmpdir = /tmp
incl   = "include"

include testdata/inc.mf

include (
	$tmpdir/${incl}1.mf?
	$tmpdir/${incl}2.mf?
)

alias print = echo

alias (
	tcp  = netstat -tanp
	run  = ps -aux
	list = ls -l
)

namespace public

action1(
	short="basic command",
	tag=demo, alias=aa1,
	hosts = "dev.$domain" prod.$domain,
	schedule = (
		time    = 4-10/2 5;7;10 2/3 5-11 *,
		overlap = false,
		notify  = cron@$domain,
		stdout  = /tmp/stdout,
		stderr  = /tmp/stderr,
	), (
		time = "10" "2/7" "*" "*" 1-5,
		stdout = (
			file = /tmp/std.out,
			duplicate = true,
			overwrite = false,
			compress = true,
		),
		stderr = (
			file = /tmp/std.err,
			duplicate = false,
			compress = true,
		),
	)
): {
	echo "running public::action1"
}

namespace private

action2(
	short = "basic command", # a comment after property should be accepted
	tag   = demo test,
	alias = aa2,
): *dep1, ?dep2&, dep3("-a" "-b" arg1 arg2)& {
	# this line will be the help of the command
	#
	# blank lines will be kept
	#
	#
	# multiple blank lines will be merge into one single
	# blank line
	#
	# enjoy
	echo "running private::action2"
}

action3(
	short   = "basic command",
	tag     = "demo",
	retry   = 10,
	timeout = "10ms",
	options = (
		short = "a",
		long  = "all",
		flag  = true,
		help  = 'get all'
	), (
		short    = b,
		long     = bind,
		default  = "localhost:22",
		required =  true,
		help     = 'bind to address',
		check    = notempty ipport not(oneof("localhost:22" ":22" "0.0.0.0:22")),
	),
	args = arg1 arg2(file),
): {
	echo "running private::action3"
}

